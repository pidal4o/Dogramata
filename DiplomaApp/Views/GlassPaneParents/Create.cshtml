@using DiplomaApp.Models.GlassPane
@using Microsoft.AspNetCore.Components
@model DiplomaApp.Models.GlassPane.GlassPaneParent

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GlassPaneParent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfileType" class="control-label"></label>
                                        <select name="ProfileType" id="ProfileType" asp-items="Html.GetEnumSelectList<ProfileTypeEnum>()">
        </select>
                <span asp-validation-for="ProfileType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileTypeMaterial" class="control-label"></label>
                        <select name="ProfileTypeMaterial" id="ProfileTypeMaterial" asp-items="Html.GetEnumSelectList<ProfileTypeMaterialEnum>()">
        </select>
                <span asp-validation-for="ProfileTypeMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WindowType" class="control-label"></label>
        <select name="WindowType" id="WindowType" asp-items="Html.GetEnumSelectList<WindowTypeEnum>()">
        </select>
            </div>
            <div class="form-group">
                <label asp-for="WingsCount" class="control-label"></label>
                <input asp-for="WingsCount" class="form-control" id="WingsCount" />
                <span asp-validation-for="WingsCount" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hight" class="control-label"></label>
                <input asp-for="Hight" class="form-control" />
                <span asp-validation-for="Hight" class="text-danger"></span>
            </div>

               <div id="productcontainer"> 
                <partial name="_WingPartialView" model="@Model" />

                </div> 
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



    <script>  
    $(function () {
        $("#WingsCount").change(function () {
            $.ajax({
                type: "Post",
                url: "/GlassPaneParents/AddWings?count=" + $(this).val(),
                contentType: 'application/json',
                data: JSON.stringify(@Html.Raw(Json.Serialize(@Model))),
                success: function (data) {
                    console.log(data);
                    $("#productcontainer").empty();
                    $("#productcontainer").html(data);
                },
                error: function (response) {
                    console.log(response.responseText);
                }
            });
        });
    });
</script>
}

